{
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8",
    "editor.formatOnSave": true,
  },
  "autopep8.args": [
    "--max-line-length=150"
  ],
  "files.exclude": {
    "**/__pycache__": true,
    "build": true,
    "builds": true,
    "dist": true,
    "**/**.egg-info/": true,
    "venv/": true,
  },
  "debug.inlineValues": "on",
  "cSpell.words": [
    "MEIPASS",
    "nicegui",
    "pyinstaller",
    "refreshable"
  ]
}